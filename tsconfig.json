{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "rootDir": "./src",
    "outDir": "./dist",

    "moduleResolution": "nodenext" 
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules"] 
}