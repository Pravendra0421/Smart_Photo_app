{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],

    "rootDir": "./",
    "outDir": "./dist",

    "moduleResolution": "nodenext" 
  },
  "include": ["src/**/*", "lib/**/*", "lib"], 
  "exclude": ["node_modules", "dist", "generated"] 
}